{% for reclamationItem in items %}
  <tr>
      {% embed '@SalesReclamationGui/Detail/boxes/order-item.twig' with {
          orderItem: reclamationItem.orderItem,
          displayImage: reclamationItem.orderItem.metadata is not null ? true : null,
          image: reclamationItem.orderItem.metadata is not null ? reclamationItem.orderItem.metadata.image : null,
          displayTotals: true,
          group: false
      } %}{% endembed %}
  </tr>
  {% embed '@SalesReclamationGui/partials/items/order-item-option.twig' with {orderItem: reclamationItem.orderItem} %}
  {% endembed %}
{% endfor %}

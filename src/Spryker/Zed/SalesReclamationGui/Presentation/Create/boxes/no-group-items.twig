{% for reclamationItem in items %}
    <tr>
        {% embed '@SalesReclamationGui/Create/boxes/order-item.twig' with {
            orderItem: reclamationItem,
            displayImage: reclamationItem.metadata is not null ? true : false,
            image: reclamationItem.metadata is not null ? reclamationItem.metadata.image : null,
            displayTotals: true,
            group: false
        } %}{% endembed %}
    </tr>
    {% embed '@SalesReclamationGui/partials/items/order-item-option.twig' with {orderItem: reclamationItem} %}
    {% endembed %}
{% endfor %}

{% for group in groups %}
    {% if (group.isBundle) %}
        <tbody class="product-bundle">
            {% embed '@SalesReclamationGui/Create/boxes/order-item.twig' with {
                orderItem: group.bundleItem,
                isBundleProduct: true,
                displayImage: true,
                displayTotals: true
            } %}{% endembed %}
            {% embed '@SalesReclamationGui/Create/boxes/bundle-group.twig' with {
                items: group.groupItems,
                bundleItem: group.bundleItem
            } %}{% endembed %}
        </tbody>
    {% else %}
        <tbody class="single-item">
            {% embed '@SalesReclamationGui/Create/boxes/single-item.twig' with {item: group.groupItems | first} %}{% endembed %}
        </tbody>
    {% endif %}
{% endfor %}

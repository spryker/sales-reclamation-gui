{% for group in groups %}
    {% if group.isBundle %}
        <tbody class="product-bundle">
            {% include '@SalesReclamationGui/Create/boxes/order-item.twig' with {
                orderItem: group.bundleItem,
                isBundleProduct: true,
                displayImage: true,
                displayTotals: true,
                reclamation: reclamation,
            } %}

            {% include '@SalesReclamationGui/Create/boxes/bundle-group.twig' with {
                items: group.groupItems,
                bundleItem: group.bundleItem,
                reclamation: reclamation,
            } %}
        </tbody>
    {% else %}
        <tbody class="single-item">
            {% include '@SalesReclamationGui/Create/boxes/single-item.twig' with {
                item: group.groupItems | first,
                reclamation: reclamation,
            } %}
        </tbody>
    {% endif %}
{% endfor %}
